/* miniprogram/pages/mine/mine.wxss */
page{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  background:rgba(237,241,245,1);
  opacity:1;
}
.minePage{
  width: 100%;
  height: 100%;
  position: relative;
}
.minebd{
  width: 100%;
  height: 458rpx;
}
image{
  width: 100%;
  height: 100%;
}
.userAvatar image{
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  transform: translate(-50%, 0);
  top: 80rpx;
  left: 50%;
}
.btnLogin,.userName{
  font-size: 28rpx;
  width: 170rpx;
  height: 70rpx;
  position: absolute;
  top: 240rpx;
  transform: translate(-50%, 0);
  left: 50%;
}
.loginOrName .userName{
  color: #ffffff;
  text-align: center;
}

.mineList{
  position: absolute;
  background-color: #fff;
  width: 670rpx;
  transform: translate(-50%, 0);
  margin-top: -113rpx;
  margin-left: 50%;
  border-radius: 20rpx;
}
.listItem{
  border-bottom: 1rpx solid #E2E2E2;
  padding:20rpx 20rpx; 
  height: 100rpx;
  box-sizing: border-box;
}
navigator{
  width: 100%;
  height: 100%;
  display:flex;
  justify-content: space-between;
  align-items:center;
}
.listLeft{
  display:flex;
  align-items:center;
  font-size: 28rpx;
}
.listIcon{
  width: 64rpx;
  height: 64rpx; 
  padding-right: 20rpx;
}
.listArrow{
  width: 20rpx;
  height: 20rpx; 
  border-top: 1rpx solid #888888;
  border-right: 1rpx solid #888888;
  transform: scale(0.5);
  transform: rotate(45deg);
}
.thingType{height: 80rpx; 
    border-bottom:1rpx solid #d9d9d9;
    padding: 0;display:flex;position:relative;}
.typeTitle{padding-left: 15px;height:80rpx;
      min-height:80rpx;line-height:80rpx;}